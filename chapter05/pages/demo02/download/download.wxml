<!--pages/demo02/download/download.wxml-->
<view class='container'>
  <include src='../../common/head.wxml' />
  <view class='page-body'>
    <view class='title'>2. 文件上传/下载</view>
    <view class='demo-box'>
      <view class='title'>wx.downloadFile(OBJECT)</view>
      <block wx:if='{{isDownload}}'>
        <image mode='widthFix' src='{{src}}'></image>
        <button bindtap="reset">重置</button>
      </block>
      <button wx:else type="primary" bindtap="download">点击此处下载图片</button>
    </view>
  </view>
  <include src='../../common/foot.wxml' />
</view>
