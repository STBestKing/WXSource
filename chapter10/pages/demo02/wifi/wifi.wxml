<!--pages/demo02/wifi/wifi.wxml-->
<view class='container'>
  <include src='../../common/head.wxml' />
  <view class='page-body'>
    <view class='title'>2. 网络</view>
    <view class='demo-box'>
      <view class='title'>Wi-Fi的综合应用</view>
      <button type='primary' bindtap='getWifiInfo'>获取Wi-Fi状态</button>
      <view class='status'>{{error}}</view>
      <view class='status'>SSID：{{res.SSID}}</view>
      <view class='status'>BSSID：{{res.BSSID}}</view>
      <view class='status'>安全性：{{res.secure}}</view>
      <view class='status'>信号强度：{{res.signalStrength}}</view>
    </view>
  </view>
  <include src='../../common/foot.wxml' />
</view>
