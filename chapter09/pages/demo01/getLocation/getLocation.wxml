<!--pages/demo01/getLocation/getLocation.wxml-->
<view class='container'>
  <include src='../../common/head.wxml' />
  <view class='page-body'>
    <view class='title'>1. 获取位置getLocation的简单应用</view>
    <view class='demo-box'>
      <view class='title'>wx.getLocation(OBJECT)</view>
      <map latitude='{{lat}}' longitude='{{lon}}'></map>
      <button type="primary" bindtap="getLocation">获取位置</button>
      <view class='title'>纬度：{{lat}}</view>
      <view class='title'>经度：{{lon}}</view>
      <view class='title'>速度：{{speed}}m/s</view>
      <view class='title'>精确度：{{accuracy}}</view>
    </view>
  </view>
  <include src='../../common/foot.wxml' />
</view>
